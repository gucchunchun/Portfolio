// import Carousel from '~/components/widgets/Carousel.astro';
import Card from '~/components/ui/Card.astro';

import AvatarImage from 'src/assets/images/avatar.jpg';
import PCImage from 'src/assets/images/pc.jpg';

const metadata = {
  title: 'Personal Homepage Demo',
